<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.bluetoothchat.ui.HomeFragment"
        android:label="HomeFragment" />
    <fragment
        android:id="@+id/bluetoothScanFragment"
        android:name="com.bluetoothchat.ui.BluetoothScanFragment"
        android:label="Scan devices" >
        <action
            android:id="@+id/action_bluetoothScanFragment_to_scannedDevicesFragment"
            app:destination="@id/scannedDevicesFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
        <action
            android:id="@+id/action_bluetoothScanFragment_to_chatFragment"
            app:destination="@id/chatFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.bluetoothchat.ui.ChatFragment"
        android:label="ChatFragment" />
    <fragment
        android:id="@+id/scannedDevicesFragment"
        android:name="com.bluetoothchat.ui.ScannedDevicesFragment"
        android:label="Scanned devices" />
</navigation>